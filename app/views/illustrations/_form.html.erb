<%= form_for @illustration, :url => "/posts/illustrations" do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :subtitle %>
  <%= f.text_field :subtitle %>

  <%= f.label :image %>
  <%= f.text_field :image %>

  <%= f.label :cover_art %>
  <%= f.text_field :cover_art %>

  <%= f.submit %>
<% end %>