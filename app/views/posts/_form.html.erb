<%= form_for(@post) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :subtitle %>
  <%= f.text_field :subtitle %>

  <%= f.label :cover_art %>
  <%= f.text_field :cover_art %>

  <%= f.file_field :avatar %>
  
  <% if @post.type == "BlogPost" %>

    <%= f.label :body %>
    <%= f.text_area :body, id:'summernote' %>

    <%= f.label :preview %>
    <%= f.text_area :preview %>

    <%= f.hidden_field :type, value: "BlogPost" %>

  <% elsif @post.type == "Illustration" %>
    <%= f.label :image %>
    <%= f.text_field :image %>

    <%= f.hidden_field :type, value: "Illustration" %>
  <% end %>

  <%= f.submit %>
<% end %>